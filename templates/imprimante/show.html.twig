{% extends 'gui/base.html.twig' %}

{% block title %}Imprimantes | Inventaire{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-print"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Imprimantes</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet de voir toutes les imprimantes.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Parfait :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erreur :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="sticky-sidebar">
                <div class="card mb-3">
                    <div class="card-header d-flex flex-between-center">
                        <h5 class="mb-0">Toutes les imprimantes</h5>
                        <a class="btn btn-falcon-default btn-sm" href="{{ path('admin.imprimante.add') }}">
                            Ajouter
                        </a>
                    </div>
                    <div class="card-body bg-light">
                        <div id="table_imprimante" data-list='{"valueNames":["nom","marque","modele","ip","contrat","site","fournisseur","numero_serie","date_installation","date_achat","date_garantie","etat","commentaire"],"page":20,"pagination":true}'>
                            <div class="row justify-content-end g-0">
                                <div class="col-auto col-sm-5 mb-3">
                                    <div class="input-group">
                                        <input class="form-control form-control-sm shadow-none search" type="search" placeholder="Rechercher..." aria-label="search" pattern=".*" />
                                        <div class="input-group-text bg-transparent">
                                            <span class="fa fa-search fs--1 text-600"></span>
                                        </div>
                                        {% if imprimantes | length != 0 %}
                                            &nbsp;&nbsp;
                                            <a class="btn btn-falcon-default btn-sm" href="{{ path('admin.imprimante.export') }}">
                                                Exporter
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="table-responsive scrollbar">
                                <table class="table overflow-hidden mb-2">
                                    <thead class="bg-200 text-900">
                                        <tr>
                                            <th class="align-middle text-center">#</th>
                                            <th class="align-middle text-center">Nom</th>
                                            <th class="align-middle text-center">Marque</th>
                                            <th class="align-middle text-center">Modèle</th>
                                            <th class="align-middle text-center">IP</th>
                                            <th class="align-middle text-center">Numéro de série</th>
                                            <th class="align-middle text-center">Emplacement</th>
                                            <th class="align-middle text-center">Site</th>
                                            <th class="align-middle text-center">Fournisseur</th>
                                            <th class="align-middle text-center">État</th>
                                            <th class="align-middle text-center">Contrat</th>
                                            <th class="align-middle text-center">Date d'installation</th>
                                            <th class="align-middle text-center">Date d'achat</th>
                                            <th class="align-middle text-center">Date de garantie</th>
                                            <th class="align-middle text-center">Commentaire</th>
                                            <th class="align-middle text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="list">
                                        {% if imprimantes | length != 0 %}
                                            {% for imprimante in imprimantes %}
                                                <tr class="align-middle text-center">
                                                    <td class="text-nowrap">{{ loop.revindex }}</td>
                                                    <td class="text-nowrap nom">
                                                        {% if imprimante.nom != null %}
                                                            {{ imprimante.nom }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap marque">
                                                        {% if imprimante.marque != null %}
                                                            {{ imprimante.marque }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap modele">
                                                        {% if imprimante.modele != null %}
                                                            {{ imprimante.modele }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap ip">
                                                        {% if imprimante.ip != null %}
                                                            {{ imprimante.ip }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap numero_serie">
                                                        {% if imprimante.numero_serie != null %}
                                                            {{ imprimante.numero_serie }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap emplacement">
                                                        {% if imprimante.emplacement_nom != null %}
                                                            {{ imprimante.emplacement_nom }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap site">
                                                        {% if imprimante.entreprise_nom != null %}
                                                            {{ imprimante.entreprise_nom }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap fournisseur">
                                                        {% if imprimante.fournisseur_nom != null %}
                                                            {{ imprimante.fournisseur_nom }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap etat">
                                                        {% if imprimante.etat_nom != null %}
                                                            {{ imprimante.etat_nom }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap contrat">
                                                        {% if imprimante.contrat == 1 %}
                                                            <span class="badge text-bg-success">Oui</span>
                                                        {% else %}
                                                            <span class="badge text-bg-danger">Non</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap date_installation">
                                                        {% if imprimante.date_installation != null %}
                                                            {{ imprimante.date_installation }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap date_achat">
                                                        {% if imprimante.date_achat != null %}
                                                            {{ imprimante.date_achat }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap date_garantie">
                                                        {% if imprimante.date_garantie != null %}
                                                            {{ imprimante.date_garantie }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap commentaire">
                                                        {% if imprimante.commentaire != null %}
                                                            {{ imprimante.commentaire }}
                                                        {% else %}
                                                            <span class="badge text-bg-danger">N/A</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        <a href="{{ path('admin.imprimante.edit', {id: imprimante.id}) }}" class="btn btn-primary btn-sm">
                                                            <span class="bi bi-pencil-square"></span>
                                                        </a>

                                                        <form method="post" action="{{ path('admin.imprimante.delete', {id: imprimante.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer l\'imprimante : {{ imprimante.nom }} ?')">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ imprimante.id) }}">
                                                            <button class="btn btn-danger btn-sm">
                                                                <span class="bi bi-trash-fill"></span>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr class="align-middle text-center">
                                                <td colspan="12">Aucune imprimante n'a été trouvé.</td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                            <div class="d-flex justify-content-center mt-3">
                                <button class="btn btn-sm btn-falcon-default me-1" type="button" title="Précédent" data-list-pagination="prev">
                                    <span class="fas fa-chevron-left"></span>
                                </button>
                                <ul class="pagination mb-0"></ul>
                                <button class="btn btn-sm btn-falcon-default ms-1" type="button" title="Suivant" data-list-pagination="next">
                                    <span class="fas fa-chevron-right"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}