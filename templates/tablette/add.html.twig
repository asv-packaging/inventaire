{% extends 'gui/base.html.twig' %}

{% block title %}Ajouter une tablette | Inventaire{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/vendors/flatpickr/flatpickr.min.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-tablet"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Tablettes</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet d'ajouter une tablette.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erreur :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="sticky-sidebar">
                <div class="card mb-3">
                    <div class="card-header d-flex flex-between-center">
                        <h5 class="mb-0">Ajouter une tablette</h5>
                        <a class="btn btn-falcon-default btn-sm" href="{{ path('admin.tablette.show') }}">
                            Retour
                        </a>
                    </div>
                    <div class="card-body bg-light">
                        {{ form_start(tabletteForm) }}
                            {{ form_row(tabletteForm.nom) }}
                            {{ form_row(tabletteForm.ip) }}
                            {{ form_row(tabletteForm.marque) }}
                            {{ form_row(tabletteForm.modele) }}
                            {{ form_row(tabletteForm.utilisateur, {'placeholder': 'Choisir un utilisateur'}) }}
                            {{ form_row(tabletteForm.emplacement, {'placeholder': 'Choisir un emplacement'}) }}
                            {{ form_row(tabletteForm.numero_serie) }}
                            {{ form_row(tabletteForm.etat, {'placeholder': 'Choisir un état'}) }}
                            {{ form_row(tabletteForm.date_achat) }}
                            {{ form_row(tabletteForm.date_garantie) }}
                            {{ form_row(tabletteForm.commentaire) }}
                            <div class="d-flex justify-content-end">
                                <button class="btn btn-primary me-1 mb-1" type="submit">Créer</button>
                            </div>
                        {{ form_end(tabletteForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('assets/js/flatpickr.js') }}"></script>
{% endblock %}
