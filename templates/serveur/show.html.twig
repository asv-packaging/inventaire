{% extends 'gui/base.html.twig' %}

{% block title %}Gestion des serveurs{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/vendors/select2/select2.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('assets/vendors/select2-bootstrap-5-theme/select2-bootstrap-5-theme.min.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="d-flex mb-4 mt-3">
        <span class="fa-stack me-2 ms-n1">
            <i class="fas fa-circle fa-stack text-300"></i>
            <i class="fa-inverse fa-stack-1x text-danger fas fa-server"></i>
        </span>
        <div class="col">
            <h5 class="mb-0 text-danger position-relative">
                <span class="bg-200 dark__bg-1100 pe-3">Serveurs</span>
                <span class="border position-absolute top-50 translate-middle-y w-100 start-0 z-n1"></span>
            </h5>
            <p class="mb-0">Cette page vous permet de gérer tous les serveurs.</p>
        </div>
    </div>
    <div class="row g-0">
        <div class="col-lg-12 ps-lg-2">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>Parfait :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erreur :</strong> {{ message }}
                    <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            <div class="sticky-sidebar">
                {# Sélection automatique de l'option dans le menu déroulant #}
                {% set selectedRecherche = app.request.query.get('par') %}

                {# Remplissage automatique du champ de recherche #}
                {% set searchValue = app.request.query.get('q') %}
                <div class="card mb-3" id="card-search" {% if searchValue == "" %}hidden{% endif %}>
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <span class="fas fa-search"></span>
                            &nbsp;Recherche
                        </h5>
                        <div>
                            <a class="btn btn-primary btn-sm me-2" id="btn-search-close">
                                Fermer
                            </a>
                        </div>
                    </div>
                    <div class="card-body bg-light">
                        <div class="card-body">
                            <form action="{{ path('admin.serveur.show') }}" method="get">
                                <label for="par" class="form-label">Rechercher par</label>
                                <select class="selectpicker" name="par" id="par">
                                    <option value="nom" {% if selectedRecherche == 'nom' %} selected {% endif %}>Nom</option>
                                    <option value="ip" {% if selectedRecherche == 'ip' %} selected {% endif %}>IP</option>
                                    <option value="physique" {% if selectedRecherche == 'physique' %} selected {% endif %}>Type</option>
                                    <option value="systeme_exploitation_id" {% if selectedRecherche == 'systeme_exploitation_id' %} selected {% endif %}>Système d'exploitation</option>
                                    <option value="numero_serie" {% if selectedRecherche == 'numero_serie' %} selected {% endif %}>Numéro de série</option>
                                    <option value="emplacement_id" {% if selectedRecherche == 'emplacement_id' %} selected {% endif %}>Emplacement</option>
                                    <option value="entreprise_id" {% if selectedRecherche == 'entreprise_id' %} selected {% endif %}>Site</option>
                                    <option value="date_contrat" {% if selectedRecherche == 'date_contrat' %} selected {% endif %}>Date de contrat</option>
                                    <option value="date_achat" {% if selectedRecherche == 'date_achat' %} selected {% endif %}>Date d'achat</option>
                                    <option value="date_garantie" {% if selectedRecherche == 'date_garantie' %} selected {% endif %}>Date de garantie</option>
                                    <option value="commentaire" {% if selectedRecherche == 'commentaire' %} selected {% endif %}>Commentaire</option>
                                </select>
                                <label for="search" class="form-label"></label>
                                <input class="form-control" type="search" id="search" name="q" placeholder="Rechercher..." aria-label="Rechercher" value="{{ searchValue }}"/>
                                <br>
                                <div class="d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary me-1 mb-1">
                                        <span class="fas fa-search"></span>
                                        &nbsp;Rechercher
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <span class="fas fa-server"></span>
                            &nbsp;Gestion des serveurs
                        </h5>
                        <div>
                            <a class="btn btn-primary btn-sm me-2" id="btn-search">
                                <span class="fas fa-search"></span>
                            </a>
                            {% if serveurs | length != 0 %}
                                <a class="btn btn-primary btn-sm" href="{{ path('admin.serveur.export') }}">
                                    <span class="fas fa-file-export"></span>
                                    &nbsp;Exporter
                                </a>
                            {% endif %}
                            <a class="btn btn-primary btn-sm" href="{{ path('admin.serveur.create') }}">
                                <span class="fas fa-circle-plus"></span>
                                &nbsp;Créer un serveur
                            </a>
                        </div>
                    </div>
                    <div class="card-body bg-light">
                        <div id="table_serveurs">
                            <div class="table-responsive scrollbar">
                                <table class="table overflow-hidden mb-2">
                                    <thead class="bg-200 text-900">
                                        <tr>
                                            <th class="align-middle text-center">#</th>
                                            <th class="align-middle text-center">Nom</th>
                                            <th class="align-middle text-center">IP</th>
                                            <th class="align-middle text-center">Système d'exploitation</th>
                                            <th class="align-middle text-center">Type</th>
                                            <th class="align-middle text-center">Numéro de série</th>
                                            <th class="align-middle text-center">Emplacement</th>
                                            <th class="align-middle text-center">Site</th>
                                            <th class="align-middle text-center">Date de contrat</th>
                                            <th class="align-middle text-center">Date d'achat</th>
                                            <th class="align-middle text-center">Date de garantie</th>
                                            <th class="align-middle text-center">Commentaire</th>
                                            <th class="align-middle text-center">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="list">
                                        {% if serveurs | length != 0 %}
                                            {% for serveur in serveurs %}
                                                <tr class="align-middle text-center">
                                                    <td class="text-nowrap">{{ serveur.id }}</td>
                                                    <td class="text-nowrap">
                                                        <a href="{{ path('admin.serveur.edit', {id: serveur.id}) }}"><b>{{ serveur.nom }}</b></a>
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.ip | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.getSystemeExploitation.nom | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {% if serveur.physique == 1 %}
                                                            <span class="badge bg-info">Physique</span>
                                                        {% else %}
                                                            <span class="badge bg-info">Virtuel</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.numeroSerie | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.getEmplacement.nom | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.getEntreprise.nom | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.dateContrat | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.dateAchat | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.dateGarantie | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        {{ serveur.commentaire | default('<span class="badge bg-danger">N/A</span>') | raw }}
                                                    </td>
                                                    <td class="text-nowrap">
                                                        <a href="{{ path('admin.serveur.edit', {id: serveur.id}) }}" class="btn btn-primary btn-sm">
                                                            <span class="bi bi-pencil-square"></span>
                                                        </a>

                                                        <form method="post" action="{{ path('admin.serveur.delete', {id: serveur.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer le serveur : {{ serveur.nom }} ?')">
                                                            <input type="hidden" name="_method" value="DELETE">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ serveur.id) }}">
                                                            <button class="btn btn-danger btn-sm">
                                                                <span class="bi bi-trash-fill"></span>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr class="align-middle text-center">
                                                <td colspan="13">Aucun serveur n'a été trouvé.</td>
                                            </tr>
                                        {% endif %}
                                    </tbody>
                                </table>
                            </div>
                            <br>
                            <div class="d-flex justify-content-center align-items-center">
                                {{ knp_pagination_render(serveurs) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendors/select2/select2.min.js') }}"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            document.getElementById('btn-search').addEventListener('click', function() {
                // Enlève l'attribut 'hidden'
                document.getElementById('card-search').removeAttribute('hidden');
                // Cache le bouton
                this.style.display = 'none';
            });

            document.getElementById('btn-search-close').addEventListener('click', function() {
                document.getElementById('card-search').setAttribute('hidden', 'hidden');
                // Affiche à nouveau le bouton de recherche
                document.getElementById('btn-search').style.display = 'inline-block';
            });
        });
    </script>
{% endblock %}